		<Popup x:Name="NotEnoughLettersPopup" Placement="Center" AllowsTransparency="True" PopupAnimation="Slide" StaysOpen="False">
            <Border Background="LightYellow" Padding="20" CornerRadius="10" BorderBrush="Black" BorderThickness="1">
                <TextBlock x:Name="NotEnoughLettersPopupTextBlock" Text="Not Enough Letters!" FontSize="16" />
            </Border>
        </Popup>

    </Grid>
</Window>
