        <Button x:Name="K" Content="K" HorizontalAlignment="Left" Margin="726,617,0,0" VerticalAlignment="Top" Height="58" Width="43" Click="K_Click" Background="#5a5a5a" FontFamily="Arial Black" FontWeight="Bold" FontSize="20" Foreground="White"/>
